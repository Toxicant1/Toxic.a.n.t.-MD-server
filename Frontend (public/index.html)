<h1>Pair Your WhatsApp</h1>
<input type="text" id="phone" placeholder="+254712345678">
<button onclick="getCode()">Generate Code</button>
<p id="result"></p>
<script>
async function getCode() {
  const phone = document.getElementById('phone').value;
  const res = await fetch('/api/get-code', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ phone })
  });
  const data = await res.json();
  document.getElementById('result').innerText = data.code || data.error;
}
</script>
